<div style="margin-left: 35px;">
    <br><br>
    <h1>Account Manager</h1>
    <br>
    <a href="/create" class="btn btn-sm btn-info">Create new account</a>
    <br><br><br>
</div>
<table style="margin-left: 35px;" class="table table-striped table-responsive-md">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Owner
            </th>
            <th>
                Public
            </th>
            <th>
                Username
            </th>
            <th>
                Password
            </th>
            <th>
                Host
            </th>
            <th>
                Description
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each accounts}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.owner}}</td>
                <td>{{this.public}}</td>
                <td>{{this.username}}</td>
                <td>{{this.password}}</td>
                <td>{{this.host}}</td>
                <td>{{this.description}}</td>
                <td><a href="/{{this.id}}/edit" class="btn btn-xs btn-warning">Edit</a></td>
                <td>
                    <form method="POST" action="/{{this.id}}/delete">
                        <input type="hidden" name="_csrf" value="{{../csrf}}">
                        <input type="hidden" name="_method" value="delete">
                        <input type="submit" value="Delete" class="btn btn-xs btn-danger">
                    </form>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>